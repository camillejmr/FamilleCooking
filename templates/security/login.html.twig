{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
    <form class="containerForm" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h2 class="title">Connexion</h2>

        <input placeholder="email" type="email" value="{{ last_username }}" name="email" id="inputEmail"
               class="form-control" required autofocus>

        <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control"
               required>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">


        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label class="remember"> Se souvenir de moi
            </label>
            <input type="checkbox" name="_remember_me">
        </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
    </form>
{% endblock %}
