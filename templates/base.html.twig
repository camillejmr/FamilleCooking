<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="{{ asset('img/famillecooking.png') }}">

    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Krub:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500;1,600&family=Pacifico&display=swap"
          rel="stylesheet">
    <title> {% block title %}Famille Cooking {% endblock %}</title>
</head>
<body>

<header>
    {% include('inc/nav.html.twig') %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</header>
<main class="container">
    <div>
        {% block body %}{% endblock %}</div>
</main>
<footer>
    &copy; Famille Cooking - {{ 'now'|date('Y') }}
</footer>

</body>
